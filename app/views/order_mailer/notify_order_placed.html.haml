%link{:href => "/assets/application.scss", :rel => "stylesheet", :type => "text/css"}/

.row
  .col-md-12
    %h2
      訂單明細
      %br
        %small
          = link_to("訂單連結", order_url(@order.token))
    %table.table.table-bordered
      %thead
        %tr
          %th{:width => "70%"} 商品明細
          %th 單價
          %th 數量
          %th 小記
      %tbody
        - @order_items.each do |order_item|
          %tr
            %td
              = order_item.product_name
            %td
              = order_item.price
            %td
              = order_item.quantity
            %td
              = order_item.quantity * order_item.price
    .total.group.clearfix
      %h4.pull-right
        總計 #{@order.total} NTD
    %hr
      %h2 寄送資訊
      %table.table.table-striped.table-bordered
        %tbody
          %tr
            %td 訂購人
          %tr
            %td
              = @order_info.billing_name
              \- #{@order_info.billing_address}
          %tr
            %td 收件者
          %tr
            %td
              = @order_info.shipping_name
              \- #{@order_info.shipping_address}
