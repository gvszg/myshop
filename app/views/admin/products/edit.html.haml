%section.new_product.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for([:admin, @product], layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6") do |f|
        %header
          %h1 Edit product
        %fieldset  
          = f.text_field :title, label: "Title"
        
          = f.text_area :description, rows: 6, label: "Description"
          
          = f.text_field :quantity, label: "Quantity"
                  
          = f.text_field :price, label: "Price"

          = f.fields_for :photos do |photo|
            = photo.file_field :image, label: "Image"
        %fieldset.actions.control-group.col-sm-offset-2
          .controls  
            = f.submit "Submit", class: "btn btn-default"